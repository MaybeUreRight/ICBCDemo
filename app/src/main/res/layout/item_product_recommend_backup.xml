<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dimen_10"
    android:layout_margin="@dimen/dimen_0"
    android:foreground="?attr/selectableItemBackground"
    app:cardMaxElevation="@dimen/dimen_10">


    <!--android:layout_marginBottom="@dimen/dimen_30"-->
    <!--android:layout_marginLeft="@dimen/dimen_0"-->
    <!--android:layout_marginRight="@dimen/dimen_0"-->
    <!--android:layout_marginTop="@dimen/dimen_0"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            style="@style/item_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A6B5FF"
            android:maxLines="1"
            android:paddingBottom="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_7"
            android:text="@string/item_product_name" />

        <ImageView
            android:id="@+id/item_procut_thum"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:scaleType="centerInside"
            android:src="@drawable/test" />

        <TextView
            android:id="@+id/item_procut_introduction"
            style="@style/item_product_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A6B5FF"
            android:maxLines="2"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_14"
            android:text="@string/item_product_introduction" />
    </LinearLayout>
</android.support.v7.widget.CardView>
